# Staging environment configuration
ENV=staging
DEBUG=false
LOG_LEVEL=info

# Database Configuration (will be overridden by secrets)
DB_HOST=postgres-staging
DB_PORT=5432
DB_NAME=eduanalytics_staging
DB_USER=postgres

# Redis Configuration (will be overridden by secrets)
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# Security (will be overridden by secrets)
# These are placeholders - actual values come from Docker secrets

# Canvas API (Staging)
CANVAS_BASE_URL=https://canvas-staging.institution.edu

# AI Services (Staging)
OLLAMA_BASE_URL=http://ollama-staging:11434

# Email Configuration (Staging)
EMAIL_HOST=smtp.staging.institution.edu
EMAIL_PORT=587
EMAIL_USE_TLS=true

# File Upload
UPLOAD_DIRECTORY=/app/uploads
MAX_FILE_SIZE=52428800

# Monitoring (Staging)
ENABLE_METRICS=true
ENABLE_TRACING=true

# Performance
WORKERS=2
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Caching
CACHE_TTL=300
