# Production environment configuration
ENV=production
DEBUG=false
LOG_LEVEL=warning

# Database Configuration (will be overridden by secrets)
DB_HOST=postgres-prod
DB_PORT=5432
DB_NAME=eduanalytics
DB_USER=eduanalytics

# Redis Configuration (will be overridden by secrets)
REDIS_HOST=redis-prod
REDIS_PORT=6379

# Security (will be overridden by secrets)
# All sensitive values come from Docker secrets or Vault

# Canvas API (Production)
CANVAS_BASE_URL=https://canvas.institution.edu

# AI Services (Production)
OLLAMA_BASE_URL=http://ollama-prod:11434

# Email Configuration (Production)
EMAIL_HOST=smtp.institution.edu
EMAIL_PORT=587
EMAIL_USE_TLS=true

# File Upload
UPLOAD_DIRECTORY=/app/uploads
MAX_FILE_SIZE=104857600

# Monitoring (Production)
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false

# Performance
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL=600
ENABLE_REDIS_CACHE=true

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/run/secrets/ssl_cert
SSL_KEY_PATH=/run/secrets/ssl_key

# Session Management
SESSION_TIMEOUT=3600
CSRF_PROTECTION=true

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Background Tasks
CELERY_BROKER_URL=redis://redis-prod:6379/1
CELERY_RESULT_BACKEND=redis://redis-prod:6379/2

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
