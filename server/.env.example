#############################
# EduAnalytics Backend (.env)
#############################

# Core DB URLs (DEV defaults)
DB_URL=postgresql+asyncpg://edua:secret@localhost:5432/eduanalytics
DB_URL_SYNC=postgresql+psycopg2://edua:secret@localhost:5432/eduanalytics
DATABASE_URL=${DB_URL}

# JWT / Auth
JWT_SECRET=change_me

# PostgreSQL credentials
POSTGRES_USER=edua
POSTGRES_PASSWORD=secret
POSTGRES_DB=eduanalytics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Notifications / n8n
N8N_WEBHOOK_URL=
ENABLE_NOTIFICATIONS=1
DEADLINE_CHECK_ENABLED=0
DEADLINE_CHECK_INTERVAL=3600
DEADLINE_NOTIFICATION_DAYS=[7,3,1]

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Redis
REDIS_URL=redis://cache:6379/0

# Force client encoding for libpq/psycopg2
PGCLIENTENCODING=UTF8

# Enable verbose config prints (0/1)
DEBUG_CONFIG=0
