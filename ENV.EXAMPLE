# ==============================================
# EduAnalytics Example Environment Configuration
# Copy this file to .env and adjust values
# ==============================================

# App environment
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:4028,http://127.0.0.1:4028,http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Database URLs
DB_URL=postgresql+asyncpg://edua:secret@db:5432/eduanalytics
DB_URL_SYNC=postgresql+psycopg2://edua:secret@db:5432/eduanalytics
DATABASE_URL=postgresql+asyncpg://edua:secret@db:5432/eduanalytics
POSTGRES_USER=edua
POSTGRES_PASSWORD=secret
POSTGRES_DB=eduanalytics

# Redis
REDIS_URL=redis://cache:6379/0

# Security / Auth
SECRET_KEY=change_me
JWT_SECRET=change_me
JWT_ALGORITHM=HS256

# Admin bootstrap
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_EMAIL=admin@example.com

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# AI Providers
AI_PROVIDER=ollama
AI_MODEL=

# Ollama (local LLM)
OLLAMA_API_BASE=http://ollama:11434
OLLAMA_MODEL=tinyllama

# Gemini (optional)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# OpenAI / OpenRouter / Anthropic (optional)
OPENAI_API_KEY=
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=

# Encoding (important on Windows)
PGCLIENTENCODING=UTF8
PYTHONIOENCODING=utf-8
PYTHONUTF8=1
